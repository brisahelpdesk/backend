generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://admin:admin@localhost:5432/helpdesk"
}

model tb_offering_category {
  id          BigInt   @id() @default(autoincrement())
  uuid        String   @unique() @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?
  created_at  DateTime
  updated_at  DateTime

  tb_offering tb_offering[]
}

model tb_offering {
  id                   BigInt   @id() @default(autoincrement())
  uuid                 String   @unique() @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  offering_category_id BigInt
  internal_code        String
  name                 String
  is_physical          Boolean
  is_active            Boolean
  description          String?
  created_at           DateTime
  updated_at           DateTime

  tb_offering_category tb_offering_category @relation(fields: [offering_category_id], references: [id])
}

model tb_user {
  id                  BigInt   @id() @default(autoincrement())
  uudi                String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username            String   @unique
  password_hash       String
  is_password_changed Boolean  @default(false)
  is_active           Boolean  @default(false)
  created_at          DateTime
  updated_at          DateTime
}

model tb_employee {
  user_id       BigInt   @id()
  uudi          String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  internal_code String?  @unique //Make it obrigatory later
  first_name    String
  last_name     String
  cpf           String
  email         String
  created_at    DateTime
  updated_at    DateTime
}
