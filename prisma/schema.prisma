generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://dba:dba@localhost:5432/brisa-helpdesk?schema=sc_helpdesk"
}

model tb_offering_type {
  id          BigInt   @id() @default(autoincrement())
  uuid        String   @unique() @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?
  created_at  DateTime
  updated_at  DateTime

  tb_offering tb_offering[]
}

model tb_offering {
  id               BigInt   @id() @default(autoincrement())
  uuid             String   @unique() @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  offering_type_id BigInt
  internal_code    String
  name             String
  is_physical      Boolean
  is_active        Boolean
  description      String?
  created_at       DateTime
  updated_at       DateTime

  tb_offering_type tb_offering_type @relation(fields: [offering_type_id], references: [id])
}
