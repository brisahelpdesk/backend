generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt @id @default(autoincrement())
  uuid     String @unique @default(uuid(4))
  email    String @unique
  password String

  client Client?

  @@map("tb_user")
}

model Client {
  id     BigInt @id
  uuid   String @unique @default(uuid(4))
  tax_id String @unique

  user User @relation(fields: [id], references: [id])

  @@map("tb_client")
}
